<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Graaby.Theme" parent="Graaby.Theme.Base">
        <!--<item name="android:buttonStyle">@style/button</item>-->
    </style>

    <style name="Graaby.Theme.Search" parent="Graaby.Theme.Base">
        <item name="colorPrimary">@color/concrete</item>
        <item name="colorPrimaryDark">@color/asbestos</item>
    </style>

    <style name="Graaby.Theme.Business" parent="Graaby.Theme.Base">
        <item name="colorPrimary">@color/wisteria</item>
        <item name="colorPrimaryDark">@color/wisteria_darker</item>
    </style>

    <style name="Graaby.Theme.Point" parent="Graaby.Theme.Base">
        <item name="colorPrimary">@color/pomegranate</item>
        <item name="colorPrimaryDark">@color/pomegranate_dark</item>
    </style>

    <!-- Base application theme. -->
    <style name="Graaby.Theme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/emarald</item>
        <item name="colorPrimaryDark">@color/nephritis</item>
        <item name="searchViewStyle">@style/GraabySearchViewStyle</item>
        <item name="listPreferredItemPaddingEnd">16dp</item>
        <item name="listPreferredItemPaddingStart">16dp</item>
        <item name="primaryBackgroundLight">@android:color/white</item>
        <!--<item name="android:textColorPrimary">@color/primary_text_default_material_light</item>-->
        <!--<item name="android:textColorPrimaryInverse">@color/primary_text_default_material_dark</item>-->
        <!--<item name="android:textColorSecondary">@color/primary_text_default_material_dark</item>-->
        <!--<item name="android:textColorSecondaryInverse">@color/primary_text_default_material_light</item>-->
    </style>


    <style name="Graaby.Theme.Toolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Graaby.Theme.DiscountItemDetails" parent="Graaby.Theme">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="LoginTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextStyle">@style/Graaby.Theme.Widget.EditTextStyle</item>
        <item name="android:autoCompleteTextViewStyle">
            @style/Graaby.Theme.Widget.AutoCompleteTextView
        </item>
    </style>
</resources>