<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GraabyBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--api version dependent styles go here-->

        <!--<item name="android:textColorPrimary">@color/primary_text_default_material_light</item>-->
        <!--<item name="android:textColorPrimaryInverse">@color/primary_text_default_material_dark</item>-->
        <!--<item name="android:textColorSecondary">@color/primary_text_default_material_dark</item>-->
        <!--<item name="android:textColorSecondaryInverse">@color/primary_text_default_material_light</item>-->
    </style>

    <style name="GraabyTheme2" parent="GraabyBaseTheme">
        <item name="searchViewStyle">@style/GraabySearchViewStyle</item>
        <item name="listPreferredItemPaddingEnd">16dp</item>
        <item name="listPreferredItemPaddingStart">16dp</item>
        <item name="primaryBackgroundLight">@android:color/white</item>

        <item name="colorPrimary">@color/graaby_light_blue</item>
        <item name="colorPrimaryDark">@color/graaby_dark_blue</item>
        <item name="colorAccent">@color/emarald</item>
    </style>

    <style name="GraabyTheme2.Login">
        <item name="colorControlNormal">@color/belizehole_darker</item>
        <item name="colorControlActivated">@color/peterriver</item>
        <item name="colorControlHighlight">@color/belizehole</item>
    </style>

    <style name="GraabyTheme2.Search">
        <item name="colorPrimary">@color/concrete</item>
        <item name="colorPrimaryDark">@color/asbestos</item>
    </style>

    <style name="GraabyTheme2.Business">
        <item name="colorPrimary">@color/wisteria</item>
        <item name="colorPrimaryDark">@color/wisteria_darker</item>
    </style>

    <style name="GraabyTheme2.Market">
        <item name="colorPrimary">@color/sunflower</item>
        <item name="colorPrimaryDark">@color/sunflower_darker</item>
    </style>

    <style name="GraabyTheme2.Point">
        <item name="colorPrimary">@color/pomegranate</item>
        <item name="colorPrimaryDark">@color/pomegranate_dark</item>
    </style>

    <style name="GraabyTheme2.DiscountItemDetails">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="InfoTheme" parent="@style/Theme.AppCompat.NoActionBar" />
</resources>