<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/global16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/global16"
            android:drawablePadding="@dimen/global16"
            android:drawableTop="@drawable/ic_tag"
            android:text="@string/dialog_tag_explanation" />

        <Button
            android:id="@+id/view_outlets"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="View Businesses"
            android:textColor="@color/wisteria" />

    </LinearLayout>
</ScrollView>