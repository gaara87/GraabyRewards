<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.Action_bar_graaby_style">
        <item name="android:windowBackground">@color/clouds</item>
        <item name="android:textViewStyle">@style/gingerbreadCustomTextStyle</item>
        <item name="android:buttonStyle">@style/button</item>
        <!-- <item name="actionBarStyle">@style/graabyActionBarStyle</item> -->
    </style>

    <style name="button" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/selector_button_press</item>
        <item name="android:textColor">@drawable/selector_button_press</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">@dimen/globalPadding8</item>
    </style>

    <!--
    <style name="graabyActionBarStyle" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/actionBarColor</item>
        <item name="backgroundStacked">@color/actionBarColor</item>
        <item name="backgroundSplit">@color/actionBarColor</item>
    </style>
    -->

    <style name="gingerbreadCustomTextStyle" parent="@style/customTextStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Platform Independent Styles -->
    <style name="graabItButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/selector_button_press_orange</item>
        <item name="android:height">@dimen/global48</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="sendPointsButtonStyle" parent="button">
        <item name="android:background">@drawable/selector_button_press_red</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="LayoutBackground">
        <item name="android:background">@color/clouds</item>
    </style>

    <style name="profile_subtext" parent="customTextStyle">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">@color/asbestos</item>
    </style>

    <style name="profile_stats" parent="customTextStyle">
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>

    <style name="LoginTheme" parent="@android:style/Theme" />

</resources>
