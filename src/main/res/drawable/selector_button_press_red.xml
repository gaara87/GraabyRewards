<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:color="@android:color/white" android:state_focused="false" android:state_pressed="false" android:state_selected="false" android:drawable="@drawable/button_red"/>
    <item android:color="@android:color/white" android:state_focused="false" android:state_pressed="false" android:state_selected="true" android:drawable="@drawable/button_red"/>
    <!-- Focused states -->
    <item android:color="@color/holo_lightred" android:state_focused="true" android:state_pressed="false" android:state_selected="false" android:drawable="@drawable/button_press_red"/>
    <item android:color="@color/holo_lightred" android:state_focused="true" android:state_pressed="false" android:state_selected="true" android:drawable="@drawable/button_press_red"/>
    <!-- Pressed -->
    <item android:color="@color/holo_lightred" android:state_pressed="true" android:drawable="@drawable/button_press_red"/>
    <!-- Default -->
    <item android:color="@android:color/white" android:drawable="@drawable/button_red"/>

</selector>
