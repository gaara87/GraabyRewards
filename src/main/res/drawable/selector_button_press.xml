<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Non focused states -->
    <item android:color="@android:color/white" android:drawable="@drawable/button" android:state_focused="false" android:state_pressed="false" android:state_selected="false" />
    <item android:color="@android:color/white" android:drawable="@drawable/button" android:state_focused="false" android:state_pressed="false" android:state_selected="true" />
    <!-- Focused states -->
    <item android:color="@color/emarald" android:drawable="@drawable/button_press" android:state_focused="true" android:state_pressed="false" android:state_selected="false" />
    <item android:color="@color/emarald" android:drawable="@drawable/button_press" android:state_focused="true" android:state_pressed="false" android:state_selected="true" />
    <!-- Pressed -->
    <item android:color="@color/emarald" android:drawable="@drawable/button_press" android:state_pressed="true" />
    <!-- Default -->
    <item android:color="@android:color/white" android:drawable="@drawable/button" />

</selector>
