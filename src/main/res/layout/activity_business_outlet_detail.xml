<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_businessPicImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/business_picture_height"
        android:layout_gravity="center"
        android:contentDescription="business picture"
        android:src="@drawable/default_business_profile_image"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_businessNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/nav_business"
        android:gravity="center_vertical"
        android:hint="Business/Restaurant"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/item_businessAddressTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/business_map_pointer"
        android:hint="Address of business"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/item_businessPhoneTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:autoLink="phone"
        android:drawableLeft="@drawable/ic_phone"
        android:hint="Phone#"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/item_businessSiteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:autoLink="web"
        android:drawableLeft="@drawable/ic_web"
        android:hint="Site"
        android:textAppearance="?android:attr/textAppearanceSmall" />
</LinearLayout>