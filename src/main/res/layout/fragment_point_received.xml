<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="graaby.app.wallet.activities.PointReceivedActivity.PointReceivedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/contacts_userProfilePicImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hero_picture_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/global16"
            android:contentDescription="business picture"
            android:scaleType="centerCrop"
            android:src="@drawable/default_business_profile_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="sent you"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/points_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/important_font_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_point"
            android:drawableRight="@drawable/ic_point"
            android:text="Graaby Points"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <Button
            android:id="@+id/btn_thanks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/global16"
            android:drawableLeft="@drawable/ic_action_accept"
            android:text=" Say thanks" />


    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>
