<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_businessPicImageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hero_picture_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/globalPadding8"
            android:contentDescription="business picture"
            android:scaleType="centerCrop"
            android:src="@drawable/default_business_profile_image" />

        <TextView
            android:id="@+id/item_businessAddressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/business_map_pointer"
            android:gravity="center_vertical"
            android:hint="Address of business"
            android:paddingLeft="@dimen/globalPadding8"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/item_businessPhoneTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="phone"
            android:drawableLeft="@drawable/ic_phone"
            android:gravity="center_vertical"
            android:hint="Phone#"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/item_businessSiteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:drawableLeft="@drawable/ic_web"
            android:gravity="center_vertical"
            android:hint="Site"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>
</android.support.v4.widget.SwipeRefreshLayout>