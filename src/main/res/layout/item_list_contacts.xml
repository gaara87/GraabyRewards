<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:foreground="?android:attr/selectableItemBackground">
    <!--android:elevation="5dp"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contacts_userProfilePicImageView"
            android:layout_width="@dimen/profile_pic_frame_size"
            android:layout_height="@dimen/profile_pic_frame_size"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_connections"
            android:contentDescription="Contact profile picture" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/contacts_usertextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/globalPadding8"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Share points"
                android:drawableLeft="@drawable/ic_point"
                android:drawableRight="@drawable/ic_transaction"
                android:background="@color/pomegranate"
                android:textColor="@android:color/primary_text_dark"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>