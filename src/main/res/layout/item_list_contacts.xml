<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_item_content_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/contacts_userProfilePicImageView"
        android:layout_width="@dimen/global48"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_connections" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/globalPadding8">


        <TextView
            android:id="@+id/contacts_usertextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/contacts_btn_sendPoints"
            style="@style/sendPointsButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="@dimen/globalPadding8"
            android:drawableLeft="@drawable/ic_point"
            android:drawableRight="@drawable/ic_transaction"
            android:text="Share Points" />
    </LinearLayout>


</LinearLayout>