<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    card_view:cardCornerRadius="4dp">
    <!--android:elevation="5dp"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contacts_userProfilePicImageView"
            android:layout_width="@dimen/profile_pic_frame_size"
            android:layout_height="@dimen/profile_pic_frame_size"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_connections" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">


            <TextView
                android:id="@+id/contacts_usertextView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/globalPadding8"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <Button
                android:id="@+id/contacts_btn_sendPoints"
                style="@style/sendPointsButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/globalPadding8"
                android:drawableLeft="@drawable/ic_point"
                android:drawableRight="@drawable/ic_transaction"
                android:text="Share Points" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>