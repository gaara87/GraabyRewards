<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="@dimen/globalPadding8">

        <LinearLayout
            android:id="@+id/page_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/globalPadding8"
                android:layout_marginLeft="-15dp"
                android:layout_marginTop="@dimen/globalPadding8"
                android:src="@drawable/login_logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/globalPadding8"
                android:gravity="center_horizontal"
                android:text="A Universal Rewards Program"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/globalPadding8"
                android:drawableLeft="@drawable/ic_discount"
                android:gravity="center_vertical"
                android:text="Get instant and flat discounts whenever you visit our partnered businesses"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/globalPadding8"
                android:drawableLeft="@drawable/ic_buyvoucher"
                android:gravity="center_vertical"
                android:text="Discover &amp; obtain amazing rewards from the businesses you love and visit often"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/globalPadding8"
                android:drawableLeft="@drawable/nav_business"
                android:gravity="center_vertical"
                android:text="Find &amp; follow Graaby Businesses"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:drawableLeft="@drawable/ic_sendpoint"
                android:text="Send rewards to your friends and family"
                android:textAppearance="?android:attr/textAppearanceMedium" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/page_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/globalPadding8"
                    android:drawableLeft="@drawable/onboard_1"
                    android:gravity="center_vertical"
                    android:text="Swipe the left edge to access the navigation drawer"
                    android:textAppearance="?android:attr/textAppearanceLarge" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/globalPadding8"
                    android:drawableLeft="@drawable/onboard_2"
                    android:gravity="center_vertical"
                    android:text="Use the profile screen to get a quick snapshot of the discounts you own and track your activities"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/globalPadding8"
                    android:drawableLeft="@drawable/onboard_3"
                    android:gravity="center_vertical"
                    android:text="Select the voucher or coupon from the marketplace and easily buy it with one click"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/globalPadding8"
                    android:drawableLeft="@drawable/onboard_4"
                    android:gravity="center_vertical"
                    android:text="Find Graaby businesses around your current location or search for a specific one"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/globalPadding8"
                    android:drawableLeft="@drawable/onboard_5"
                    android:gravity="center_vertical"
                    android:text="Connect your social accounts and share points with your contacts quickly"
                    android:textAppearance="?android:attr/textAppearanceLarge" />
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/page_three"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:hint="Enter your e-mail"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/onboarding_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/editText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:text="Register" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="39dp"
                android:gravity="center"
                android:text="Check your e-mail after registration for the verification e-mail"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </RelativeLayout>


    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/onboarding_skip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Skip &amp; Login" />

        <Button
            android:id="@+id/onboarding_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Next" />
    </LinearLayout>

</LinearLayout>