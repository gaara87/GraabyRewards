<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="right"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_transaction_summary"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/globalPadding8">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/globalPadding8"
                    android:text="@string/summary_billed_amount"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/concrete" />

                <TextView
                    android:id="@+id/gross_total"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/orange"
                    android:textIsSelectable="false"
                    android:textSize="@dimen/summary_text_size"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/globalPadding8"
                    android:text="@string/summary_graaby_discount"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/concrete" />

                <TextView
                    android:id="@+id/user_discount"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/holo_darkyellow"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout"
            android:background="@color/holo_darkgreen"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/globalPadding8"
            android:paddingTop="@dimen/globalPadding8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/globalPadding8"
                android:text="@string/summary_total"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/holo_lightgreen" />

            <TextView
                android:id="@+id/net_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_rupee_selected"
                android:drawableRight="@drawable/ic_rupee_selected"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="@dimen/readable_text_size"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_transaction_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:paddingBottom="@dimen/globalPadding8"
            android:text="Summary"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/concrete" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_next_selector"
            android:drawableLeft="@drawable/ic_action_accept"
            android:text="Confirm &amp; Finish"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/reward_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/linearLayout2"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/points"
            android:gravity="center"
            android:text="@string/reward_amount"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <CheckBox
            android:id="@+id/checkin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reward_amount"
            android:layout_centerHorizontal="true"
            android:checked="true"
            android:drawableLeft="@drawable/ic_checkin"
            android:text="Check In"
            android:textAppearance="?android:attr/textAppearanceLarge" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/max_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/max_count_info"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/silver" />

        <TextView
            android:id="@+id/tv_empty_grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/error_no_discount_items_available"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/pomegranate"
            android:visibility="gone" />


        <GridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/globalPadding8"
            android:layout_marginStart="@dimen/globalPadding8"
            android:choiceMode="multipleChoice"
            android:horizontalSpacing="@dimen/globalPadding8"
            android:numColumns="2"
            android:verticalSpacing="@dimen/globalPadding8" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>